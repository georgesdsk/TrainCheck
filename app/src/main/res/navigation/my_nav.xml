<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/trainingFragment">
    <fragment
        android:id="@+id/addFragment"
        android:name="com.finde.android.traincheck.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/navigateToTrain"
            app:destination="@id/trainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/asistFragment"
        android:name="com.finde.android.traincheck.AsistFragment"
        android:label="fragment_asist"
        tools:layout="@layout/fragment_asist" />
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.finde.android.traincheck.StatsFragment"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" >
        <action
            android:id="@+id/actionEncuesta"
            app:destination="@id/encuestaFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainingFragment"
        android:name="com.finde.android.traincheck.TrainingFragment"
        android:label="fragment_training"
        tools:layout="@layout/fragment_training" >
        <action
            android:id="@+id/navigateToAdd"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/encuestaFragment"
        android:name="com.finde.android.traincheck.EncuestaFragment"
        android:label="fragment_encuesta"
        tools:layout="@layout/fragment_encuesta" />
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.finde.android.traincheck.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/actionInicio"
            app:destination="@id/actionInicio" />
    </fragment>
</navigation>